{
  "name": "vroxy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "GPL-3.0-only",
  "dependencies": {
    "tailwindcss": "^3.4.13"
  },
  "scripts": {
    "build": "rm -rf build && mkdir build && yarn build:css && cp -r html css img js manifest.json build/",
